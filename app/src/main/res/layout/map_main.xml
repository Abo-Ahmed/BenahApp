<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:background="@color/backColor"
    android:padding="0dp">


    <TextView
        android:id="@+id/map_title"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:ellipsize="marquee"
        android:textSize="25sp"
        android:text="Maps"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/map_title"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.example.dell.benahapp.maps.mapMain"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:text="Faculty of Medicine"
                android:layout_marginBottom="10dp"
                android:background="@drawable/draw"
                android:textColor="@color/textColor"
                android:onClick="openMaps"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/medicine"
                />
        </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:text="Faculty of Veterinary"
            android:layout_marginBottom="10dp"
            android:background="@drawable/draw"
            android:textColor="@color/textColor"
            android:onClick="openMaps"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/veter"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:text="Faculty of Nursing"
            android:layout_marginBottom="10dp"
            android:background="@drawable/draw"
            android:textColor="@color/textColor"
            android:onClick="openMaps"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/nurse"
            />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:text="Faculty of Science"
            android:background="@drawable/draw"
            android:textColor="@color/textColor"
            android:layout_marginBottom="10dp"
            android:onClick="openMaps"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/science"
            />

        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:text="Faculty of education"
            android:background="@drawable/draw"
            android:textColor="@color/textColor"
            android:layout_marginBottom="10dp"
            android:onClick="openMaps"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edu"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:text="Faculty of Arts"
            android:background="@drawable/draw"
            android:textColor="@color/textColor"
            android:layout_marginBottom="10dp"
            android:onClick="openMaps"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/art"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:text="Faculty of Agriculture"
            android:background="@drawable/draw"
            android:textColor="@color/textColor"
            android:layout_marginBottom="10dp"
            android:onClick="openMaps"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/art"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:text="Faculty of Physical Education"
            android:background="@drawable/draw"
            android:textColor="@color/textColor"
            android:layout_marginBottom="10dp"
            android:onClick="openMaps"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/phy"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:layout_width="219dp"
        android:layout_height="wrap_content"
            android:text="Faculty of Law"
            android:background="@drawable/draw"
            android:textColor="@color/textColor"
            android:layout_marginBottom="10dp"
            android:onClick="openMaps"
        android:width="219dp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/low"
            />
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:layout_width="219dp"
        android:layout_height="wrap_content"
            android:text="Shoubra Faculty of engineering"
            android:background="@drawable/draw"
            android:textColor="@color/textColor"
            android:layout_marginBottom="10dp"
            android:id="@+id/shoubra"
            android:onClick="showBranch"
        android:width="219dp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shoubra"
            />
    </LinearLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/branch"
            android:visibility="gone"
            android:layout_marginBottom="10dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="KHALAFAWY"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/draw"
                android:textColor="@color/textColor"
                android:onClick="k"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ROD ELFARAG"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/draw"
                android:textColor="@color/textColor"
                android:onClick="r"/>


        </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:layout_width="219dp"
        android:layout_height="wrap_content"
            android:text="Faculty of Information &amp; Technology"
            android:layout_marginBottom="10dp"
            android:background="@drawable/draw"
            android:textColor="@color/textColor"
            android:onClick="openMaps"
        android:width="219dp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/computer"
            />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:layout_width="219dp"
        android:layout_height="wrap_content"
            android:text="Benha Faculty of Engineering"
            android:layout_marginBottom="10dp"
            android:background="@drawable/draw"
            android:textColor="@color/textColor"
            android:onClick="openMaps"
        android:width="219dp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/benha_eng"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:layout_width="219dp"
        android:layout_height="wrap_content"
            android:text="Faculty of Applied Arts"
            android:layout_marginBottom="10dp"
            android:background="@drawable/draw"
            android:textColor="@color/textColor"
            android:onClick="openMaps"
        android:width="219dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/art"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:layout_width="219dp"
        android:layout_height="wrap_content"
            android:text="Faculty of Specific Education"
            android:background="@drawable/draw"
            android:textColor="@color/textColor"
            android:onClick="openMaps"
        android:width="219dp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/spec"
            />
        </LinearLayout>

    </LinearLayout>




</ScrollView>

</RelativeLayout>
