<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dell.benahapp.course.courseMain"
    android:background="@color/backColor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Academic years"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="48dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الفرقه الاعداديه"
                android:id="@+id/button11"
                android:background="@drawable/draw"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="قسم الهندسه المدنيه"
                android:background="@drawable/draw"
                android:layout_marginBottom="10dp"
                android:textColor="@color/textColor"
                android:id="@+id/button22"
                android:layout_above="@+id/button77"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="قسم الهندسه المعماريه"
                android:background="@drawable/draw"
                android:textColor="@color/textColor"
                android:layout_marginBottom="10dp"
                android:id="@+id/button33"
                android:layout_above="@+id/button22"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="قسم الهندسه المساحيه"
                android:background="@drawable/draw"
                android:textColor="@color/textColor"
                android:layout_marginBottom="10dp"
                android:id="@+id/button44"
                android:layout_below="@+id/button11"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="قسم الهندسه الكهربيه"
                android:id="@+id/button55"
                android:background="@drawable/draw"
                android:textColor="@color/textColor"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/button66"
                android:layout_gravity="center_horizontal"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="قسم الهندسه الميكانيكيه"
                android:background="@drawable/draw"
                android:textColor="@color/textColor"
                android:layout_marginBottom="10dp"
                android:id="@+id/button66"
                android:layout_above="@+id/button88"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="قسم الهندسه الصناعيه"
                android:background="@drawable/draw"
                android:layout_marginBottom="10dp"
                android:textColor="@color/textColor"
                android:id="@+id/button77"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="قسم هندسة الطاقه والطاقه المستدامه"
                android:background="@drawable/draw"
                android:textColor="@color/textColor"
                android:id="@+id/button88"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
